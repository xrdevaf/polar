@inject NavigationManager UriHelper

<div class="top-row px-4">
    <div class="row mr-auto">
        <a class="nav-link" href="" @onclick:preventDefault @onclick="@(()=>UriHelper.NavigateTo(UriHelper.BaseUri, true))">
            Home
        </a>
        <a class="nav-link" href="Counter" @onclick:preventDefault @onclick="@(()=>UriHelper.NavigateTo(UriHelper.BaseUri + "Counter", true))">
